<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!--  Add Controls for Previewer Here  -->
        </Border>
    </Design.PreviewWith>

    <!--  Add Styles Here  -->
    <Style Selector="ToggleButton PathIcon.HelpOpen">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ToggleButton:checked PathIcon.HelpOpen">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ToggleButton PathIcon.HelpClosed">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ToggleButton:checked PathIcon.HelpClosed">
        <Setter Property="IsVisible" Value="False" />
    </Style>
</Styles>
